{
    "name": "grove",
    "version": "1.0.0",
    "description": "A multi-tenant API for supporting common operations across multiple web applications.",
    "homepage": "https://github.com/Steven-Clements/grove#readme",
    "bugs": {
        "url": "https://github.com/Steven-Clements/grove/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Steven-Clements/grove.git"
    },
    "license": "Apache-2.0",
    "author": "Steven \"Chris\" Clements <clements.steven07@outlook.com>",
    "type": "module",
    "main": "dist/index.js",
    "scripts": {
        "dev": "ts-node source/index.ts",
        "build": "tsc",
        "server": "node build/index.js",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier . --write",
        "format:check": "prettier . --check",
        "typecheck": "tsc --noEmit",
        "test": "vitest",
        "test:watch": "vitest --watch",
        "test:ci": "vitest run --coverage"
    },
    "dependencies": {
        "express": "^5.2.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^20.2.0",
        "@commitlint/config-conventional": "^20.2.0",
        "@eslint/js": "^9.39.1",
        "@types/express": "^5.0.6",
        "@types/node": "^24.10.1",
        "@vitest/coverage-v8": "^4.0.15",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "prettier": "^3.7.4",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.48.1",
        "vitest": "^4.0.15"
    },
    "lint-staged": {
        "*.{ts,js,json,md}": [
            "prettier --write"
        ],
        "*.ts": [
            "eslint --fix"
        ]
    }
}
